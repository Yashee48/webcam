import glob
import os
import cv2
import time
from emailing import send_email
from threading import Thread

video = cv2.VideoCapture(0)
time.sleep(1) #for initial capture

first_frame = None
status_list = []
count = 1

def clean_folder():#function for clearing the images folder
    print("Cleaning folder started")
    images = glob.glob("images/*.png")
    for image in images:
        os.remove(image)
    print("Cleaning folder finished")
while True:
    status = 0

    check, frame = video.read()

    gray_frame = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)#covert image in gray
    gray_frame_gau = cv2.GaussianBlur(gray_frame, (21, 21), 0)#%of gray colour

    if first_frame is None:
        first_frame = gray_frame_gau

    cv2.absdiff( first_frame, gray_frame_gau)#comparison from first capture
    delta_frame = cv2.absdiff( first_frame, gray_frame_gau)


    thresh_frame = cv2.threshold( delta_frame, 60, 255, cv2.THRESH_BINARY )[1]
    dil_frame = cv2.dilate(thresh_frame, None, iterations=2)
    cv2.imshow('frame', dil_frame)
#we need to differentiate for the new object that has occured in the frame so we are drawing contours overit.
    contours,check=cv2.findContours(dil_frame,cv2.RETR_EXTERNAL,cv2.CHAIN_APPROX_SIMPLE)

    for contour in contours:
        if cv2.contourArea(contour)<5000:#if the object is small we can ignore that
            continue

        x,y,w,h=cv2.boundingRect(contour)#extracting dimensions of objects
        rectangle = cv2.rectangle(frame,(x,y),(x+w,y+h),(0,255,0),3)#0,255,0 is for the colour so the colour of rect is green 3 is for width
        if rectangle.any():#if .any is not there then the program will  get stop
            status = 1
            cv2.imwrite(f"images/{count}.png", frame)#  Storing the images
            count = count + 1
            all_images  = glob.glob("images/*.png")
            index = int(len(all_images)/2)#finding the middle one of all the images
            image_with_object = all_images[index]




    status_list.append(status)
    status_list = status_list[-2:]

    if status_list[0] == 1 and status_list[1] == 0:
        email_thread = Thread(target=send_email,args=(image_with_object, ))
        email_thread.deamon = True
        clean_thread = Thread(target=clean_folder)
        clean_thread.deamon = True

        email_thread.start()
        clean_thread.start()


    print(status_list)



    cv2.imshow('frame2',frame)



    key = cv2.waitKey(1)
    if key==ord('q'):
        break

video.release()
